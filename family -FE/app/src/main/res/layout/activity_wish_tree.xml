<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wishtree.WishTreeActivity">

    <TextView
        android:id="@+id/wishtree_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/box_my_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqahansans"
        android:text="@string/wishtree"
        android:textColor="@color/pink01"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/wishtree_title"
        app:layout_constraintBottom_toBottomOf="@id/wishtree_title"/>

    <TextView
        android:id="@+id/wishtree_top_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/spoqahansans"
        android:text="@string/wishtree_top_message"
        android:textColor="@color/black_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wishtree_title" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        app:layout_constraintTop_toBottomOf="@id/wishtree_top_message"
        app:srcCompat="@drawable/tree_illust" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/wishtree_icon"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="214dp" />


</androidx.constraintlayout.widget.ConstraintLayout>