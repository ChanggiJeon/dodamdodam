<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@color/gray01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_my_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/my_status_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/box_text_alarm"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/my_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/spoqahansans"
        android:maxLines="2"
        android:text="오늘은 너무 피곤해요 그냥 쉬고 싶어요."
        android:textColor="@color/pink01"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/my_status_image"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <View
        android:id="@+id/my_info_edit_button"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/my_info_edit_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/spoqahansans"
        android:gravity="center"
        android:text="@string/setting_info_edit"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_info_edit_button"
        app:layout_constraintEnd_toEndOf="@+id/my_info_edit_button"
        app:layout_constraintStart_toStartOf="@+id/my_info_edit_button"
        app:layout_constraintTop_toTopOf="@+id/my_info_edit_button" />

    <View
        android:id="@+id/my_status_edit_button"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_info_edit_button" />

    <TextView
        android:id="@+id/my_status_edit_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/spoqahansans"
        android:gravity="center"
        android:text="@string/setting_status_edit"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_status_edit_button"
        app:layout_constraintEnd_toEndOf="@+id/my_status_edit_button"
        app:layout_constraintStart_toStartOf="@+id/my_status_edit_button"
        app:layout_constraintTop_toTopOf="@+id/my_status_edit_button" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ellipsize="end"
        android:fontFamily="@font/spoqahansans"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/setting_family_code"
        android:textColor="@color/pink01"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_status_edit_button" />

    <View
        android:id="@+id/family_code"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/family_code_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/spoqahansans"
        android:gravity="center"
        android:text="8384kf3rs"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/family_code"
        app:layout_constraintEnd_toEndOf="@+id/family_code"
        app:layout_constraintStart_toStartOf="@+id/family_code"
        app:layout_constraintTop_toTopOf="@+id/family_code" />

    <ImageButton
        android:id="@+id/shareImageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/family_code"
        app:layout_constraintEnd_toEndOf="@+id/family_code"
        app:layout_constraintTop_toTopOf="@+id/family_code"
        app:srcCompat="@drawable/ic_outline_share" />


    <ImageButton
        android:id="@+id/copyImageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/family_code"
        app:layout_constraintEnd_toStartOf="@+id/shareImageButton"
        app:layout_constraintTop_toTopOf="@+id/family_code"
        app:srcCompat="@drawable/ic_baseline_content_copy" />

    <View
        android:id="@+id/exit_group_button"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/box_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/family_code" />

    <TextView
        android:id="@+id/exit_group_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/spoqahansans"
        android:gravity="center"
        android:text="@string/setting_exit_group"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/exit_group_button"
        app:layout_constraintEnd_toEndOf="@+id/exit_group_button"
        app:layout_constraintStart_toStartOf="@+id/exit_group_button"
        app:layout_constraintTop_toTopOf="@+id/exit_group_button" />

    <View
        android:id="@+id/logout_button"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit_group_button" />

    <TextView
        android:id="@+id/logout_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/spoqahansans"
        android:gravity="center"
        android:text="@string/setting_logout"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logout_button"
        app:layout_constraintEnd_toEndOf="@+id/logout_button"
        app:layout_constraintStart_toStartOf="@+id/logout_button"
        app:layout_constraintTop_toTopOf="@+id/logout_button" />
</androidx.constraintlayout.widget.ConstraintLayout>