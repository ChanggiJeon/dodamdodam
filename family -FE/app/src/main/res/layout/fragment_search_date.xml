<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.album.SearchDateFragment">
    <View
        android:id="@+id/free_icon_g"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_search_album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <DatePicker
        android:id="@+id/search_album_datePicker"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="100dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/free_icon_g"
        app:layout_constraintTop_toTopOf="@+id/free_icon_g" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/album_search_button"
        android:fontFamily="@font/spoqahansans"
        android:text="@string/album_search"
        app:layout_constraintBottom_toBottomOf="@+id/search_album_datePicker"
        app:layout_constraintEnd_toEndOf="@+id/free_icon_g"
        app:layout_constraintStart_toEndOf="@+id/search_album_datePicker"
        app:layout_constraintTop_toTopOf="@+id/search_album_datePicker" />
</androidx.constraintlayout.widget.ConstraintLayout>